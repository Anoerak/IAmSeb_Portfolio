{% extends 'base.html.twig' %}

{% block title %}IamSeb w/ Symfony | Home
{% endblock %}


{% block body %}
	{{ encore_entry_script_tags('home') }}

	<section id='about-me'>
		<div class='top__container'>
			<div {{ react_component('components/GlitchingText/GlitchingText', { text: '*****************************', dataValue: 'JUNIOR {FULLSTACK} DEVELOPER', tags: 'h2', classValue: 'title1', } ) }}></div>
			<br/>
		</div>
		<div class="middle__container">
			<div {{ react_component('components/GlitchingImg/GlitchingImg', { img: 'build/assets/imgs/portrait_me.webp' , alt: 'portrait B&W' } )}}></div>
			<div class="welcome">
				<div class="welcome__img">
					<img src="{{ asset('build/assets/logos/welcome-back.png')}}" alt="Welcome Back sign"/>
				</div>
				<div {{ react_component('components/GlitchingText/GlitchingText', { text: '************', dataValue: 'SEBASTIEN P.', tags: 'h2', classValue: 'title2', } ) }}></div>
				<div class="message__container">
					<div class="message">
						<p>Welcome to my web development portfolio! Here, youâ€™ll find a showcase of my skills, creativity, and dedication to the craft of web development.</p>
						<p>This website is built using a modern JavaScript framework. Depending on your preference, you can choose to view this site in React, Vue, or Symfony.</p>
						<p>So go ahead, explore, and enjoy your journey through my portfolio. I hope it inspires you as much as it has inspired me in creating it. Happy browsing!</p>
					</div>
					<div class="links__container">
						<a href="https://iamseb.dev" class="framework react">
							<img src="{{ asset('build/assets/logos/react-native.webp')}}" alt="Welcome Back sign" class="react__img"/>
							React
						</a>
						<a href="https://iamseb.dev/vue" class="framework vue">
							<img src="{{ asset('build/assets/logos/vuejs.webp')}}" alt="Welcome Back sign" class="vue__img"/>
							Vue
						</a>
						<a href="https://iamseb.dev/symfony" class="framework symfony">
							<img src="{{ asset('build/assets/logos/symfony.webp')}}" alt="Welcome Back sign" class="symfony__img"/>
							Symfony
						</a>
					</div>
				</div>
			</div>
		</div>
		<div class='bottom__container'>
			<div {{ react_component('components/GlitchingText/GlitchingText', { text: '************', dataValue: 'SEBASTIEN P.', tags: 'h2', classValue: 'title3', } ) }}></div>
		</div>
		<a href='#me-anchor' class='next__link'>
			<div class='next__section__arrow'></div>
		</a>
	</section>

	<section id='me-in-few-words'>
		<h4 id='me-anchor'>Who am I?</h4>
		<div class="middle__container">
			<div class="left__side">
				<div class='top__part'>
					<img src="{{asset('build/assets/logos/web_dev.png')}}" alt='Webdev' class='about__me__logo'>
					<div {{ react_component('components/TypeWriter/TypeWriter', { text1: 'I am a Fullstack Developer with a passion for creating and developing web applications.', text2: 'I am always looking for new challenges and opportunities to learn and grow.', text3: 'When I am not coding, you can find me playing with my son, video games, or watching movies.' } )}}></div>
				</div>
				<div class='bottom__part'>
					<img src="{{ asset('build/assets/logos/hooked_code.png')}}" alt='HookedCode' class='about__me__logo'>
					<div {{ react_component('components/TypeWriter/TypeWriter', { text3: 'I started learning web development in 2021 and I have been hooked ever since.' , text4: 'I love that I learn a bit more every day and the ability to mix tech together!!' } )}}></div>

				</div>
			</div>
			<div class="right__side">
				<img src="{{ asset('build/assets/logos/bot.png')}}" alt="Little Bot Head">
				<div {{ react_component('components/SebGPT/SebGPT')}}></div>
			</div>
		</div>
		<a href='#my-stack' class='next__link'>
			<div class='next__section__arrow'></div>
		</a>
	</section>

	<section id='my-stack'>
		<h4>My Tools
		</h4>
		<div id='stack__container__1' class='stack__container'>
			<div id='card1' class='stack__card'>
				<h5>Front-End</h5>
				<div {{ react_component('components/BlinkingWords/BlinkingWords', { words: frontStack , tag: 'front' } )}}></div>
			</div>
			<div id='card2' class='stack__card'>
				<h5>Back-End</h5>
				<div {{ react_component('components/BlinkingWords/BlinkingWords', { words: backStack , tag: 'back' } )}}></div>
			</div>
			<div id='card3' class='stack__card'>
				<h5>Others</h5>
				<div {{ react_component('components/BlinkingWords/BlinkingWords', { words: otherStack , tag: 'others' } )}}></div>
			</div>
		</div>

		<h6>And I try to keep up with something new on a daily basis...</h6>

		<div id='stack__container__2' class='stack__container'>
			<div id='card4' class='stack__card'>
				<h5>Front..</h5>
				<div {{ react_component('components/BlinkingWords/BlinkingWords', { words: learningStack[0] , tag: 'learningFront' } )}}></div>
			</div>
			<div id='card5' class='stack__card'>
				<h5>Back..</h5>
				<div {{ react_component('components/BlinkingWords/BlinkingWords', { words: learningStack[1] , tag: 'learningBack' } )}}></div>
			</div>
		</div>
	</section>

{% endblock %}
